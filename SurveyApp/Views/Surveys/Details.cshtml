@model SurveyApp.Models.Survey

@{
    ViewData["Title"] = "Details";
}

<h2>Q & A</h2>

<p>
    <a asp-action="Create" asp-controller="Questions" asp-route-id="@Model.SurveyId">Create New</a>
</p>

<div>
    <h4>Survey</h4>
  
</div>


<div>
    @foreach (var item in Model.Questions)
    {
        
            <dt>
                @Html.DisplayFor(modelItem => item.Content) 


                <a asp-action="Edit" asp-controller="Questions" asp-route-id="@item.QuestionId">Edit</a> |
                <a asp-action="Delete" asp-controller="Questions" asp-route-id="@item.QuestionId">Delete</a>
            </dt>
        

        <ol>
        @foreach (var items in item.Answers)
        {
       
            <li>
                @Html.DisplayFor(modelItem => items.Content)


                <a asp-action="Edit" asp-controller="Answers" asp-route-id="@items.AnswerId">Edit</a>
            </li>
        }
        </ol>
    }
</div>