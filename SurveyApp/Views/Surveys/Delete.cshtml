@model SurveyApp.Models.Survey

@{
    ViewData["Title"] = "Delete";
}
<div class="qnaContainer">
    <div class="surveyCreateContainer effect7">
        <h3>Are you sure you want to delete this Survey?</h3>


        <h2 class="surveyDeleteName">
            @Html.DisplayFor(model => model.Name)
        </h2>


        <form asp-action="Delete">
            <input type="hidden" asp-for="SurveyId" />
            <input type="submit" value="Delete" class="btn btn-info surveySurveyButton" />
            <a asp-action="Index" class="btn btn-info surveySurveyButton">Back</a>
        </form>
    </div>
</div>
