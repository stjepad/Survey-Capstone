@model SurveyApp.Models.SurveyDetailsViewModels.SruveyDetailsViewModel

@{
    ViewData["Title"] = "SurveyDetails";
}

<h2 class="resultsHeader">Survey Results For @Model.Survey.Name</h2>


<div class=" qnaContainer">
    @for (var i = 0; i < Model.Questions.Count; i++)
    {
        
        <input type="hidden" value="@Model.Questions[i].Content" id="question-@(i + 1)" class="question-data" />
        <div class=""></div>
        <div class="qnaQnaContainer effect7">
           
            <h4 class="qnaQuestionContainer no-top-margin">@Model.Questions[i].Content</h4>

            <ul class="ulHidden">
                @for (var j = 0; j < Model.Questions[i].Answers.Count; j++)
                {
                    <li>
                        <input type="hidden" value="@Model.Questions[i].Answers[j].Content--@Model.Questions[i].Answers[j].AnswerSurveyInstances.Count" class="answer-data" id="answer-@(j + 1)-q-@(i + 1)" />
                        @*<span>@Model.Questions[i].Answers[j].Content</span>
                        <span>:</span>
                        <span>@Model.Questions[i].Answers[j].AnswerSurveyInstances.Count</span>*@
                    </li>
                }

            </ul>
            <div class="chartContainerContainer">
                <div class="chartContainer">
                    <div Style="font-family: Corbel; font-size: small ;text-align:center " class="">
                        <div class=" chartSize">
                            <canvas class="answer-chart" id="myChart-@(i + 1)" style="padding: 0;margin: auto;display: block; "> </canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }
</div>

